                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>

            <Grid.Background>
                <RadialGradientBrush>

                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="White" Offset="0.8"/>

