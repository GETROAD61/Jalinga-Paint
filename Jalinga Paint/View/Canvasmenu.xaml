<Page x:Class="Jalinga_Paint.View.Canvasmenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Jalinga_Paint.View"
      xmlns:lm="clr-namespace:Jalinga_Paint.UseControl"
      mc:Ignorable="d" 
      d:DesignHeight="1060" d:DesignWidth="1920" 
      ShowsNavigationUI="False"
      Title="Canvasmenu">

    <!--Грид страницы-->
    <Grid Height="1060" Width="1920"
          Background="White">
        
        <!--Грид канвваса-->
        <Grid Height="1060" Width="1220"
              VerticalAlignment="Center"
              HorizontalAlignment="Left">

            <Canvas Height="1040" Width="1200"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
                
            </Canvas>
            
        </Grid>
        
        <!--Грид панели инструментов-->
        <Grid Height="1060" Width="700"
              VerticalAlignment="Center"
              HorizontalAlignment="Right">

            <lm:RadialMenu VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,50"/>

        </Grid>
        
    </Grid>
</Page>
